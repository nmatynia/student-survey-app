<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EndedSurveyStatsActivity"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:gravity="center"
        android:text="Survey Statistics"
        android:textAlignment="center"
        android:textSize="34sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        >

        <TextView
            android:id="@+id/questionContentCol"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="Question"
            android:textStyle="bold"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/resSDCol"
            android:layout_width="37dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="12dp"
            android:gravity="center_vertical"
            android:text="SD"
            android:textStyle="bold"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/resDCol"
            android:layout_width="37dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="12dp"
            android:gravity="center_vertical"
            android:text="D"
            android:textStyle="bold"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/resNorCol"
            android:layout_width="37dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="12dp"
            android:gravity="center_vertical"
            android:text="Nor"
            android:textStyle="bold"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/resACol"
            android:layout_width="37dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="12dp"
            android:gravity="center_vertical"
            android:text="A"
            android:textStyle="bold"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/resSACol"
            android:layout_width="37dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="12dp"
            android:gravity="center_vertical"
            android:text="SA"
            android:textStyle="bold"
            android:textSize="15sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/questionsResList"
        android:layout_width="match_parent"
        android:layout_height="284dp" />

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#251351"
        android:onClick="logout"
        android:text="Logout" />

</LinearLayout>
